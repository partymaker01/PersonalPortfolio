@model Experience
@{
    ViewData["Title"] = "Delete Experience";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Delete Experience</h1>
        <p class="text-muted mb-0">Confirm experience deletion</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Are you sure you want to delete this experience record? This action cannot be undone.
        </div>

        <div class="bg-light rounded p-4 mb-4">
            <div class="d-flex align-items-start">
                <div class="bg-warning bg-opacity-10 rounded p-3 me-3">
                    <i class="bi bi-building text-warning fs-4"></i>
                </div>
                <div>
                    <h5 class="mb-1">@Model.JobTitle</h5>
                    <p class="text-primary mb-1">@Model.Company</p>
                    <p class="text-muted small mb-0">
                        @(Model.StartDate.HasValue? Model.StartDate.Value.ToString("MMM yyyy") : "N/A") - @(Model.IsCurrentlyWorking ? "Present" : (Model.EndDate.HasValue ? Model.EndDate.Value.ToString("MMM yyyy") : "N/A"))
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <span class="ms-2">| @Model.Location</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Experience
                </button>
            </div>
        </form>
    </div>
</div>