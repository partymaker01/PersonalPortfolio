@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <span class="h3 fw-bold" style="background: linear-gradient(135deg, #4f46e5, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            <i class="bi bi-boxes me-2" style="-webkit-text-fill-color: #4f46e5;"></i>PortfolioHub
                        </span>
                    </a>
                </div>

                <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                                 style="width: 70px; height: 70px; background: linear-gradient(135deg, #10b981, #06b6d4);">
                                <i class="bi bi-person-plus text-white fs-2"></i>
                            </div>
                            <h4 class="fw-bold mb-1">Create Account</h4>
                            <p class="text-muted small">Start building your professional portfolio</p>
                        </div>

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" style="border-radius: 12px; background: rgba(239, 68, 68, 0.1); color: #dc2626;" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-6">
                                    <label asp-for="FirstName" class="form-label fw-medium small">First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="John"
                                           style="border-radius: 10px; border: 2px solid #e2e8f0; padding: 0.75rem 1rem;" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="LastName" class="form-label fw-medium small">Last Name</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Doe"
                                           style="border-radius: 10px; border: 2px solid #e2e8f0; padding: 0.75rem 1rem;" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="Email" class="form-label fw-medium small">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0" style="background: #f8fafc; border-radius: 10px 0 0 10px; border: 2px solid #e2e8f0;">
                                        <i class="bi bi-envelope" style="color: #94a3b8;"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="you@example.com"
                                           style="border-radius: 0 10px 10px 0; border: 2px solid #e2e8f0; border-left: none; padding: 0.75rem 1rem;" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mt-3">
                                <label asp-for="Password" class="form-label fw-medium small">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0" style="background: #f8fafc; border-radius: 10px 0 0 10px; border: 2px solid #e2e8f0;">
                                        <i class="bi bi-lock" style="color: #94a3b8;"></i>
                                    </span>
                                    <input asp-for="Password" class="form-control border-start-0 ps-0" placeholder="Create a strong password"
                                           style="border-radius: 0 10px 10px 0; border: 2px solid #e2e8f0; border-left: none; padding: 0.75rem 1rem;" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="mt-3 mb-4">
                                <label asp-for="ConfirmPassword" class="form-label fw-medium small">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0" style="background: #f8fafc; border-radius: 10px 0 0 10px; border: 2px solid #e2e8f0;">
                                        <i class="bi bi-lock-fill" style="color: #94a3b8;"></i>
                                    </span>
                                    <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" placeholder="Confirm your password"
                                           style="border-radius: 0 10px 10px 0; border: 2px solid #e2e8f0; border-left: none; padding: 0.75rem 1rem;" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn w-100 py-3 fw-semibold text-white"
                                    style="border-radius: 12px; background: linear-gradient(135deg, #10b981, #059669); border: none; box-shadow: 0 4px 14px rgba(16, 185, 129, 0.4);">
                                <i class="bi bi-rocket-takeoff me-2"></i>Create Account
                            </button>
                        </form>

                        <div class="position-relative my-4">
                            <hr class="text-muted">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small text-muted">or</span>
                        </div>

                        <p class="text-center mb-0">
                            <span class="text-muted">Already have an account?</span>
                            <a asp-action="Login" class="fw-semibold text-decoration-none" style="color: #4f46e5;">Sign in</a>
                        </p>
                    </div>
                </div>

                <p class="text-center text-muted small mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                        <i class="bi bi-arrow-left me-1"></i>Back to Home
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control:focus {
            border-color: #10b981 !important;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1) !important;
        }

        .input-group:focus-within .input-group-text {
            border-color: #10b981 !important;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5) !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
