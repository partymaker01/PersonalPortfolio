@model Certificate
@{
    ViewData["Title"] = "Delete Certificate";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Delete Certificate</h1>
        <p class="text-muted mb-0">Confirm certificate deletion</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Are you sure you want to delete this certificate? This action cannot be undone.
        </div>

        <div class="bg-light rounded p-4 mb-4">
            <div class="d-flex align-items-start">
                <div class="bg-danger bg-opacity-10 rounded p-3 me-3">
                    <i class="bi bi-award text-danger fs-4"></i>
                </div>
                <div>
                    <h5 class="mb-1">@Model.Name</h5>
                    <p class="text-muted mb-1">@Model.IssuingOrganization</p>
                    @if (Model.IssueDate.HasValue)
                    {
                        <p class="text-muted small mb-0">
                            Issued: @Model.IssueDate?.ToString("MMM yyyy")
                            @if (!Model.DoesNotExpire && Model.ExpirationDate.HasValue)
                            {
                                <span> - Expires: @Model.ExpirationDate?.ToString("MMM yyyy")</span>
                            }
                        </p>
                    }
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Certificate
                </button>
            </div>
        </form>
    </div>
</div>
