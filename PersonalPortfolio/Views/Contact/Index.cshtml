@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Messages";
    Layout = "_DashboardLayout";
}

<div class="page-header d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 mt-5">
    <div>
        <h1 class="h3 mb-1">Messages</h1>
        <p class="text-muted mb-0">Messages from portfolio visitors</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 40px;"></th>
                        <th>From</th>
                        <th>Subject</th>
                        <th>Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr class="@(message.IsRead ? "" : "table-light fw-medium")">
                            <td>
                                @if (!message.IsRead)
                                {
                                    <span class="badge bg-primary rounded-pill">New</span>
                                }
                            </td>
                            <td>
                                <div>@message.Name</div>
                                <small class="text-muted">@message.Email</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(message.Subject))
                                {
                                    @message.Subject
                                }
                                else
                                {
                                    <span class="text-muted">(No subject)</span>
                                }
                            </td>
                            <td>
                                <small>@message.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@message.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-envelope text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3">No messages yet</h5>
            <p class="text-muted mb-0">Messages from your portfolio visitors will appear here</p>
        </div>
    </div>
}
