@model Contact
@{
    ViewData["Title"] = "Delete Message";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Delete Message</h1>
        <p class="text-muted mb-0">Confirm message deletion</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Are you sure you want to delete this message? This action cannot be undone.
        </div>

        <div class="bg-light rounded p-4 mb-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="text-muted small">From</label>
                    <p class="mb-0 fw-medium">@Model.Name</p>
                    <small class="text-muted">@Model.Email</small>
                </div>
                <div class="col-md-6">
                    <label class="text-muted small">Date</label>
                    <p class="mb-0">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
            </div>
            <div>
                <label class="text-muted small">Message Preview</label>
                <p class="mb-0">@(Model.Message.Length > 200 ? Model.Message.Substring(0, 200) + "..." : Model.Message)</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Message
                </button>
            </div>
        </form>
    </div>
</div>
