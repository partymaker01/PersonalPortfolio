@model Contact
@{
    ViewData["Title"] = $"Contact {ViewBag.PortfolioOwner}";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Portfolio" asp-route-username="@ViewBag.Username" class="text-decoration-none">
                        <span class="h4 fw-bold" style="background: linear-gradient(135deg, #4f46e5, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            <i class="bi bi-arrow-left me-2" style="-webkit-text-fill-color: #4f46e5;"></i>Back to Portfolio
                        </span>
                    </a>
                </div>

                <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                                 style="width: 80px; height: 80px; background: linear-gradient(135deg, #4f46e5, #06b6d4);">
                                <i class="bi bi-envelope text-white fs-2"></i>
                            </div>
                            <h3 class="fw-bold mb-1">Get In Touch</h3>
                            <p class="text-muted">Send a message to <strong>@ViewBag.PortfolioOwner</strong></p>
                        </div>

                        <form asp-action="Send" asp-route-username="@ViewBag.Username" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"
                                 style="border-radius: 12px; background: rgba(239, 68, 68, 0.1); color: #dc2626;" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Name" class="form-label fw-medium small">Your Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text border-end-0"
                                              style="background: #f8fafc; border-radius: 10px 0 0 10px; border: 2px solid #e2e8f0;">
                                            <i class="bi bi-person" style="color: #94a3b8;"></i>
                                        </span>
                                        <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="John Doe"
                                               style="border-radius: 0 10px 10px 0; border: 2px solid #e2e8f0; border-left: none;" />
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-medium small">Your Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text border-end-0"
                                              style="background: #f8fafc; border-radius: 10px 0 0 10px; border: 2px solid #e2e8f0;">
                                            <i class="bi bi-envelope" style="color: #94a3b8;"></i>
                                        </span>
                                        <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="you@example.com" type="email"
                                               style="border-radius: 0 10px 10px 0; border: 2px solid #e2e8f0; border-left: none;" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Subject" class="form-label fw-medium small">Subject</label>
                                    <input asp-for="Subject" class="form-control" placeholder="What's this about?"
                                           style="border-radius: 10px; border: 2px solid #e2e8f0; padding: 0.75rem 1rem;" />
                                    <span asp-validation-for="Subject" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Message" class="form-label fw-medium small">Message</label>
                                    <textarea asp-for="Message" class="form-control" rows="5"
                                              placeholder="Write your message here..."
                                              style="border-radius: 10px; border: 2px solid #e2e8f0; padding: 0.75rem 1rem;"></textarea>
                                    <span asp-validation-for="Message" class="text-danger small"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn w-100 py-3 mt-4 fw-semibold text-white"
                                    style="border-radius: 12px; background: linear-gradient(135deg, #4f46e5, #4338ca); border: none; box-shadow: 0 4px 14px rgba(79, 70, 229, 0.4);">
                                <i class="bi bi-send me-2"></i>Send Message
                            </button>
                        </form>

                        <div class="text-center mt-4 pt-3 border-top">
                            <p class="text-muted small mb-0">
                                <i class="bi bi-shield-check me-1"></i>Your information is safe and will only be shared with @ViewBag.PortfolioOwner
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control:focus {
            border-color: #4f46e5 !important;
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1) !important;
        }

        .input-group:focus-within .input-group-text {
            border-color: #4f46e5 !important;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.5) !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
