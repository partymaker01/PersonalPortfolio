@model IEnumerable<Education>
@{
    ViewData["Title"] = "Education";
    Layout = "_DashboardLayout";
}
<div class="page-header d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 mt-5">
    <div>
        <h1 class="h3 mb-1">Education</h1>
        <p class="text-muted mb-0">Manage your educational background</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Add Education
    </a>
</div>
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var edu in Model)
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex">
                                <div class="bg-info bg-opacity-10 rounded p-3 me-3">
                                    <i class="bi bi-mortarboard text-info fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">@edu.Degree</h5>
                                    <p class="text-primary mb-1">@edu.School</p>
                                    @if (!string.IsNullOrEmpty(edu.FieldOfStudy))
                                    {
                                        <p class="mb-1">@edu.FieldOfStudy</p>
                                    }
                                    <p class="text-muted small mb-0">
                                        @(edu.StartDate.HasValue? edu.StartDate.Value.ToString("MMM yyyy") : "N/A") - @(edu.EndDate.HasValue? edu.EndDate.Value.ToString("MMM yyyy") : "Present")
                                    </p>
                                    @if (!string.IsNullOrEmpty(edu.Description))
                                    {
                                        <p class="mt-2 mb-0 text-muted">@edu.Description</p>
                                    }
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@edu.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@edu.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-mortarboard text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3">No education records yet</h5>
            <p class="text-muted mb-3">Add your educational background</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add Education
            </a>
        </div>
    </div>
}