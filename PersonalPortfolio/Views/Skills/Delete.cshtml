@model Skill
@{
    ViewData["Title"] = "Delete Skill";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Delete Skill</h1>
        <p class="text-muted mb-0">Confirm skill deletion</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Are you sure you want to delete this skill? This action cannot be undone.
        </div>

        <div class="bg-light rounded p-4 mb-4">
            <h5 class="mb-3">@Model.Name</h5>
            <div class="row">
                <div class="col-md-4">
                    <small class="text-muted">Category</small>
                    <p class="mb-0">@(Model.Category ?? "N/A")</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Proficiency</small>
                    <p class="mb-0">@Model.Proficiency%</p>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Display Order</small>
                    <p class="mb-0">@Model.DisplayOrder</p>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Skill
                </button>
            </div>
        </form>
    </div>
</div>
