@model ApplicationUser
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="page-header d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 mt-5">
    <div>
        <h1 class="h3 fw-bold mb-1">Welcome back, @Model?.FirstName!</h1>
        <p class="text-muted mb-0">Here's an overview of your portfolio</p>
    </div>
    <a asp-controller="Home" asp-action="Portfolio" asp-route-username="@User.Identity?.Name"
       class="btn btn-primary" target="_blank">
        <i class="bi bi-eye me-2"></i>View Live Portfolio
    </a>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(79, 70, 229, 0.1), rgba(79, 70, 229, 0.2));">
                    <i class="bi bi-lightning-charge" style="color: #4f46e5;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.SkillsCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Skills</p>
                </div>
                <a asp-controller="Skills" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.2));">
                    <i class="bi bi-folder2-open" style="color: #10b981;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.ProjectsCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Projects</p>
                </div>
                <a asp-controller="Projects" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(6, 182, 212, 0.2));">
                    <i class="bi bi-mortarboard" style="color: #06b6d4;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.EducationsCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Education</p>
                </div>
                <a asp-controller="Education" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.2));">
                    <i class="bi bi-briefcase" style="color: #f59e0b;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.ExperiencesCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Experience</p>
                </div>
                <a asp-controller="Experience" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(168, 85, 247, 0.2));">
                    <i class="bi bi-patch-check" style="color: #a855f7;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.CertificatesCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Certificates</p>
                </div>
                <a asp-controller="Certificates" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-4">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center p-4">
                <div class="stat-icon me-3" style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.2));">
                    <i class="bi bi-envelope" style="color: #ef4444;"></i>
                </div>
                <div>
                    <h2 class="mb-0 fw-bold">@ViewBag.UnreadMessagesCount</h2>
                    <p class="text-muted mb-0 small fw-medium">Unread Messages</p>
                </div>
                <a asp-controller="Contact" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-0 pb-0 pt-4 px-4">
                <h5 class="fw-bold mb-0">
                    <i class="bi bi-rocket-takeoff me-2" style="color: #4f46e5;"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-flex flex-column gap-2">
                    <a asp-controller="Profile" asp-action="Index"
                       class="d-flex align-items-center p-3 rounded-3 text-decoration-none"
                       style="background: #f8fafc; transition: all 0.2s;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 44px; height: 44px; background: linear-gradient(135deg, #4f46e5, #818cf8);">
                            <i class="bi bi-person text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-semibold d-block" style="color: #1e293b;">Update Profile</span>
                            <small class="text-muted">Edit your personal information</small>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                    <a asp-controller="Skills" asp-action="Create"
                       class="d-flex align-items-center p-3 rounded-3 text-decoration-none"
                       style="background: #f8fafc; transition: all 0.2s;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 44px; height: 44px; background: linear-gradient(135deg, #10b981, #34d399);">
                            <i class="bi bi-plus-lg text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-semibold d-block" style="color: #1e293b;">Add New Skill</span>
                            <small class="text-muted">Showcase your abilities</small>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                    <a asp-controller="Projects" asp-action="Create"
                       class="d-flex align-items-center p-3 rounded-3 text-decoration-none"
                       style="background: #f8fafc; transition: all 0.2s;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 44px; height: 44px; background: linear-gradient(135deg, #06b6d4, #22d3ee);">
                            <i class="bi bi-folder-plus text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-semibold d-block" style="color: #1e293b;">Add New Project</span>
                            <small class="text-muted">Share your latest work</small>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                    <a asp-controller="Contact" asp-action="Index"
                       class="d-flex align-items-center p-3 rounded-3 text-decoration-none"
                       style="background: #f8fafc; transition: all 0.2s;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 44px; height: 44px; background: linear-gradient(135deg, #f59e0b, #fbbf24);">
                            <i class="bi bi-envelope text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-semibold d-block" style="color: #1e293b;">View Messages</span>
                            <small class="text-muted">Check messages from visitors</small>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-0 pb-0 pt-4 px-4">
                <h5 class="fw-bold mb-0">
                    <i class="bi bi-lightbulb me-2" style="color: #f59e0b;"></i>Portfolio Tips
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="alert mb-4" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(79, 70, 229, 0.1)); border: none; border-radius: 12px;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3" style="color: #4f46e5;"></i>
                        <div>
                            <strong style="color: #1e293b;">Pro Tip:</strong>
                            <span class="text-muted">A complete portfolio with projects and skills gets 3x more views!</span>
                        </div>
                    </div>
                </div>
                <ul class="list-unstyled mb-0">
                    <li class="d-flex align-items-center mb-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 28px; height: 28px; background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-check-lg small" style="color: #10b981;"></i>
                        </div>
                        <span>Add a professional profile picture</span>
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 28px; height: 28px; background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-check-lg small" style="color: #10b981;"></i>
                        </div>
                        <span>Write a compelling bio about yourself</span>
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 28px; height: 28px; background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-check-lg small" style="color: #10b981;"></i>
                        </div>
                        <span>Add at least 5 key skills with proficiency</span>
                    </li>
                    <li class="d-flex align-items-center mb-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 28px; height: 28px; background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-check-lg small" style="color: #10b981;"></i>
                        </div>
                        <span>Showcase 3-5 of your best projects</span>
                    </li>
                    <li class="d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 28px; height: 28px; background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-check-lg small" style="color: #10b981;"></i>
                        </div>
                        <span>Include relevant certifications</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-card {
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }

            .stat-card:hover {
                transform: translateY(-4px) !important;
                box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.15) !important;
            }

            .stat-card::after {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 120px;
                height: 100%;
                background: linear-gradient(135deg, transparent 40%, rgba(0,0,0,0.02) 40%);
            }

        a[style*="background: #f8fafc"]:hover {
            background: #f1f5f9 !important;
            transform: translateX(4px);
        }
    </style>
}
