@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_DashboardLayout";
}

<div class="page-header d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 mt-5">
    <div>
        <h1 class="h3 fw-bold mb-1">Edit Profile</h1>
        <p class="text-muted mb-0">Update your personal information and social links</p>
    </div>
    <a asp-controller="Home" asp-action="Portfolio" asp-route-username="@User.Identity?.Name"
       class="btn btn-outline-primary" target="_blank">
        <i class="bi bi-eye me-2"></i>Preview Portfolio
    </a>
</div>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"
         style="border-radius: 12px; background: rgba(239, 68, 68, 0.1); color: #dc2626;" role="alert"></div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <div class="position-relative d-inline-block">
                            @if (!string.IsNullOrEmpty(Model.CurrentProfileImagePath))
                            {
                                <img src="@Model.CurrentProfileImagePath" alt="Profile" class="rounded-circle shadow"
                                     style="width: 150px; height: 150px; object-fit: cover; border: 4px solid white;">
                            }
                            else
                            {
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center shadow"
                                     style="width: 150px; height: 150px; background: linear-gradient(135deg, #4f46e5, #06b6d4);">
                                    <i class="bi bi-person text-white" style="font-size: 4rem;"></i>
                                </div>
                            }
                            <label for="ProfileImage" class="position-absolute bottom-0 end-0 btn btn-primary btn-sm rounded-circle p-2"
                                   style="width: 40px; height: 40px; cursor: pointer;">
                                <i class="bi bi-camera"></i>
                            </label>
                        </div>
                    </div>
                    <input type="file" asp-for="ProfileImage" class="d-none" id="ProfileImage" accept="image/*" onchange="previewImage(this)">
                    <span asp-validation-for="ProfileImage" class="text-danger small d-block"></span>
                    <p class="text-muted small mb-0">Click the camera icon to upload a new photo</p>
                    <p class="text-muted small mb-0">Recommended: 400x400px, Max 5MB</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h6 class="fw-bold mb-0">
                        <i class="bi bi-link-45deg me-2" style="color: #4f46e5;"></i>Social Links
                    </h6>
                </div>
                <div class="card-body p-4 pt-2">
                    <div class="mb-3">
                        <label asp-for="LinkedInUrl" class="form-label small fw-medium">
                            <i class="bi bi-linkedin me-1" style="color: #0077b5;"></i>LinkedIn
                        </label>
                        <input asp-for="LinkedInUrl" class="form-control" placeholder="https://linkedin.com/in/username" />
                        <span asp-validation-for="LinkedInUrl" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GitHubUrl" class="form-label small fw-medium">
                            <i class="bi bi-github me-1" style="color: #333;"></i>GitHub
                        </label>
                        <input asp-for="GitHubUrl" class="form-control" placeholder="https://github.com/username" />
                        <span asp-validation-for="GitHubUrl" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TwitterUrl" class="form-label small fw-medium">
                            <i class="bi bi-twitter-x me-1"></i>Twitter / X
                        </label>
                        <input asp-for="TwitterUrl" class="form-control" placeholder="https://twitter.com/username" />
                        <span asp-validation-for="TwitterUrl" class="text-danger small"></span>
                    </div>
                    <div>
                        <label asp-for="WebsiteUrl" class="form-label small fw-medium">
                            <i class="bi bi-globe me-1" style="color: #4f46e5;"></i>Personal Website
                        </label>
                        <input asp-for="WebsiteUrl" class="form-control" placeholder="https://yourwebsite.com" />
                        <span asp-validation-for="WebsiteUrl" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h6 class="fw-bold mb-0">
                        <i class="bi bi-person me-2" style="color: #4f46e5;"></i>Personal Information
                    </h6>
                </div>
                <div class="card-body p-4 pt-2">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label small fw-medium">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label small fw-medium">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="JobTitle" class="form-label small fw-medium">Job Title</label>
                            <input asp-for="JobTitle" class="form-control" placeholder="e.g., Full Stack Developer" />
                            <span asp-validation-for="JobTitle" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label small fw-medium">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., Manila, Philippines" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Bio" class="form-label small fw-medium">Bio</label>
                            <textarea asp-for="Bio" class="form-control" rows="5"
                                      placeholder="Tell visitors about yourself, your experience, and what makes you unique..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                            <small class="text-muted">Write a compelling bio that showcases your personality and expertise</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-lg me-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.querySelector('img.rounded-circle');
                    if (img) {
                        img.src = e.target.result;
                    } else {
                        const placeholder = document.querySelector('.rounded-circle.d-inline-flex');
                        if (placeholder) {
                            const newImg = document.createElement('img');
                            newImg.src = e.target.result;
                            newImg.alt = 'Profile';
                            newImg.className = 'rounded-circle shadow';
                            newImg.style = 'width: 150px; height: 150px; object-fit: cover; border: 4px solid white;';
                            placeholder.parentNode.replaceChild(newImg, placeholder);
                        }
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
