@model Project
@{
    ViewData["Title"] = "Delete Project";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Delete Project</h1>
        <p class="text-muted mb-0">Confirm project deletion</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Are you sure you want to delete this project? This action cannot be undone.
        </div>

        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded">
                }
                else
                {
                    <div class="bg-primary bg-opacity-10 d-flex align-items-center justify-content-center rounded" style="height: 200px;">
                        <i class="bi bi-folder text-primary" style="font-size: 3rem;"></i>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <h4>@Model.Title</h4>
                <p class="text-muted">@Model.Description</p>
                @if (!string.IsNullOrEmpty(Model.Technologies))
                {
                    <p><strong>Technologies:</strong> @Model.Technologies</p>
                }
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Project
                </button>
            </div>
        </form>
    </div>
</div>
