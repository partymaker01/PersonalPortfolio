@model IEnumerable<Project>
@{
    ViewData["Title"] = "Projects";
    Layout = "_DashboardLayout";
}

<div class="page-header d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 mt-5">
    <div>
        <h1 class="h3 fw-bold mb-1">Projects</h1>
        <p class="text-muted mb-0">Showcase your best work</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Add Project
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var project in Model)
        {
            <div class="col-md-6 col-xl-4">
                <div class="card h-100 overflow-hidden">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(project.ImagePath))
                        {
                            <img src="@project.ImagePath" class="card-img-top" alt="@project.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center"
                                 style="height: 200px; background: linear-gradient(135deg, #f1f5f9, #e2e8f0);">
                                <i class="bi bi-folder2-open" style="font-size: 3.5rem; color: #94a3b8;"></i>
                            </div>
                        }
                        @if (project.IsFeatured)
                        {
                            <span class="position-absolute top-0 end-0 m-3 badge"
                                  style="background: linear-gradient(135deg, #f59e0b, #fbbf24); padding: 0.5rem 0.75rem;">
                                <i class="bi bi-star-fill me-1"></i>Featured
                            </span>
                        }
                    </div>
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-2">@project.Title</h5>
                        <p class="card-text text-muted small mb-3" style="line-height: 1.6;">
                            @(project.Description.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)
                        </p>
                        @if (!string.IsNullOrEmpty(project.Technologies))
                        {
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @foreach (var tech in project.Technologies.Split(',').Take(4))
                                {
                                    <span class="badge" style="background: rgba(79, 70, 229, 0.1); color: #4f46e5; font-weight: 500;">@tech.Trim()</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-top p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                @if (!string.IsNullOrEmpty(project.ProjectUrl))
                                {
                                    <a href="@project.ProjectUrl" target="_blank" class="btn btn-sm"
                                       style="background: rgba(79, 70, 229, 0.1); color: #4f46e5;" title="View Live">
                                        <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                {
                                    <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm"
                                       style="background: rgba(30, 41, 59, 0.1); color: #1e293b;" title="View Code">
                                        <i class="bi bi-github"></i>
                                    </a>
                                }
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-folder2-open"></i>
            </div>
            <h5 class="fw-bold mb-2">No projects added yet</h5>
            <p class="text-muted mb-4">Start adding projects to showcase your work to potential employers</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add Your First Project
            </a>
        </div>
    </div>
}

@section Styles {
    <style>
        .card:hover .card-img-top {
            transform: scale(1.02);
            transition: transform 0.3s ease;
        }

        .card-img-top {
            transition: transform 0.3s ease;
        }
    </style>
}
